<div class="message">
  <% @chats.each do |chat| %>
    <% if chat.user_id == current_user.id %>
      <p style="text-align: right">
        <%= chat.message %>
        <%= attachment_image_tag chat.user , :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
      </p>
    <% else %>
      <p style="text-align: left">
        <%= attachment_image_tag chat.user , :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <%= chat.message %>
    <% end %>
  <% end %>
</div>
    <%= form_with model: @chat do |f| %>
    <%= f.text_field :message %>
    <%= f.hidden_field :room_id %>
    <% end %>
  <% if now.favorited_by?(current_user) %>

      <%= link_to now_favorites_path(now), method: :delete, remote: true do %>
        <i class="fas fa-thumbs-up"></i>️<%= now.favorites.count %>
      <% end %>

  <% else %>

      <%= link_to now_favorites_path(now), method: :post, remote: true do %>
        <i class="far fa-thumbs-up"></i>️<%= now.favorites.count %>
      <% end %>

  <% end %>
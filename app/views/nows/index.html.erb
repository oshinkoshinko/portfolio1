<div class="container">
  <h2>Doing</h2>
    <div>
      <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    </div>
    <div>
      <%= render 'nows/form', now: @now_new %>
    </div>
</div>

<div class="container">
<h2>Timeline</h2>
<table class="table">
  <thead>
    <tr>
      <td>User</td>
      <td>Doing</td>
      <td>Category</td>
      <td>Place</td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @nows.each do |now| %>
    <tr>
      <td>
        <%= attachment_image_tag now.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
        <%=link_to now.user.name, user_path(now.user) %>
        <%= time_ago_in_words(now.created_at) %>
      </td>
      <td><%= now.now_body %></td>
      <td><%= now.hobby_code %></td>
      <td>@ <%= now.address %></td>
      <%= render 'favorites/favorite', now: now %>
      <td>
        <%= link_to now_reply_path(now.user.id, now.id) do %>
          <i class="far fa-comment-dots"></i>
        <% end %>
      </td>
      <% if current_user == now.user %>
      <td>
       <%= link_to edit_now_path(now.id) do %>
        <i class="fas fa-wrench"></i>
       <% end %>
      </td>
      <td>
       <%= link_to now_path(now.id), method: :delete do %>
        <i class="far fa-trash-alt"></i>
       <% end %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @nows %>
</div>

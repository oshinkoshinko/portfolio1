<div class="container">
  <h2>following</h2>
  <% if @users.exists? %>
    <% @users.each do |user| %>
      <div>
      <%= link_to user_path(user) do %>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
      <% end %>
      <%= user.name %>
      <%= user.introduction %>
      </div>
    <% end %>
  <% else %>
    <p>ユーザーがいません</p>
  <% end %>
</div>